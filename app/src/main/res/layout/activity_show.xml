<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityShow"
    android:background="@color/fondo">


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@drawable/redondo_background_verzul"
        android:padding="8dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:id="@+id/leftMask"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/teatromask"
            android:layout_gravity="center_vertical" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teatro Talca"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/organizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organiza: Rodrigo Ignacio"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número: 9828324"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/attendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n° asistentes: 520"
                android:textStyle="bold"
                android:textColor="#000" />
        </LinearLayout>


        <ImageView
            android:id="@+id/rightMask"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/teatromask"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


    <Button
        android:id="@+id/add"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:backgroundTint="#00A7B3"
        android:contentDescription="Agregar evento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>